        </form>
    </div>
    <div class="large-12 columns">
        <form>
            <div class="row">
                <div class="large-4 columns">
                    <label class="right inline">Label</label>
                </div>
                <div class="large-20 columns">
                    <input type="text" placeholder="Standard Input" />
                </div>
            </div>
        </form>
    </div>
</div>

